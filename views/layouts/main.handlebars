<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/frontend-style.css" />
    <script
      src="https://kit.fontawesome.com/5bae9e23d6.js"
      crossorigin="anonymous"
    ></script>
    <title>Bring The Tech</title>
  </head>
  <body>
    <header>
      <h1>
        <a href="/">Bring The Tech</a>
      </h1>
      <nav>
        {{#if loggedIn}}
          <a href="#" id="logout">Logout</a>
          <a href="/cart" id="cart"><i
              class="fa-solid fa-bag-shopping"
            ></i>cart</a>
        {{else}}
          <a href="/login">Login</a>
        {{/if}}
      </nav>
    </header>

    {{{body}}}

    <section class="contact-form-container">
      <div class="flex-row">
        <h2 class="section-title tertiary-border">Questions about products?</h2>
      </div>

      <div class="contact-form">
        <h3>Contact Us</h3>
        <form>
          <label for="contact-name">Your Name</label>
          <input type="text" id="contact-name" placeholder="Your Name" />

          <label for="contact-message">Message</label>
          <textarea id="contact-message" placeholder="Message"></textarea>

          <button type="submit">Submit</button>
        </form>
      </div>
    </section>
    <footer>
      <h2>Bring The Tech Electronics Marketplace &copy;</h2>
      <a href="/seed" id="seed">Add Product</a>
    </footer>
  </body>
  <script src="./assets/js/header-style.js"></script>
  <script src="./assets/js/add-cart.js"></script>
  {{#if loggedIn}}
    <script src="/assets/js/logout.js"></script>
  {{/if}}
</html>